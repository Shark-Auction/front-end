{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@axios/*": ["src/config/axios/*"],
      "@layout/*": ["src/core/layout/*"],
      "@store/*": ["src/core/store/*"],
      "@hooks/*": ["src/hooks/*"],
      "@model/*": ["src/model/*"],
      "@pages/*": ["src/pages/*"],
      "@service/*": ["src/service/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
